@model NSI.Models.Detail

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удалить</h1>

<div>
    <h4>Удалить деталь</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <p>Название детали</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
           <p>Норматив</p>
        </dt>
        <dd class = "col-sm-10">
            <a asp-controller="Normatives" asp-action="Details" asp-route-id="@Model.Normative.Id">@Model.Normative.Designation</a>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">К списку деталей</a>
    </form>
</div>
