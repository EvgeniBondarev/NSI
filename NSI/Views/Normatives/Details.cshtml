@model NSI.Models.Normative

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Подробно</h1>

<div>
    <h4>Норматив</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Код
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class = "col-sm-2">
            Обозначение
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Designation)
        </dd>
        <dt class = "col-sm-2">
            Количество
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            Единица измерения
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UnitOfMeasure)
        </dd>
        <dt class = "col-sm-2">
            Признак
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AttributeNavigation.Name)
        </dd>
        <dt class = "col-sm-2">
            Тип
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DetailTypeNavigation.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Изменить</a> |
    <a asp-action="Index">К списку нормативов</a>
</div>
